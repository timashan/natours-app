style.
  body {
    background-color: #f5f5f5;
  }

  table {
    border-spacing: 0;
  }

  .wrapper {
    padding-top: 20px;
  }

  .main {
    width: 600px;
    max-width: 100%;
    font-family: sans-serif;
    background-color: #fff;
    padding: 15px 25px;
    margin: 0 auto;
  }

  a {
    padding: 5px 0;
    display: inline-block;
    border: none;
    border-radius: 5px;
    background-color: #3498db;
    padding: 12px 25px;
    cursor: pointer;
    font-weight: bold;
    color: white;
    font-size: 16px;
    text-decoration: none;
  }